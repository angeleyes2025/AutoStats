@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
</style>

<div class="login-container">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
            <label asp-for="Input.Email" class="form-label">Email adresa</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Lozinka" />
            <label asp-for="Input.Password" class="form-label">Lozinka</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe" class="form-check-label">
                Zapamti me
            </label>
        </div>

        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-primary">Prijavi se</button>
        </div>

        <div class="mt-3 text-center">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nemaš nalog? Registruj se</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
