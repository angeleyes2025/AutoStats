@model AutoStats.Models.ServiceRecord

@{
    ViewData["Title"] = "Brisanje servisa";
}

<h2>Brisanje servisa</h2>

<h4>Da li ste sigurni da želite obrisati ovaj zapis?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Datum</dt>
        <dd class="col-sm-10">@Model.ServiceDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.ServiceType</dd>

        <dt class="col-sm-2">Kilometraža</dt>
        <dd class="col-sm-10">@Model.Mileage</dd>

        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Cijena</dt>
        <dd class="col-sm-10">@Model.Cost.ToString("0.00") KM</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Obriši" class="btn btn-danger" />
            <a asp-action="ByVehicle" asp-route-vehicleId="@Model.VehicleId" class="btn btn-secondary">Nazad</a>
        </div>
    </form>
</div>
