@model AutoStats.Models.Vehicle

@{
    ViewData["Title"] = "Obriši vozilo";
}

<h1>Obriši vozilo</h1>

<h3 class="text-danger">Da li ste sigurni da želite obrisati ovo vozilo?</h3>

<div>
    <h4>@Model.Make @Model.Model (@Model.RegistrationNumber)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Godina proizvodnje:</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Broj šasije:</dt>
        <dd class="col-sm-9">@Model.ChassisNumber</dd>

        <dt class="col-sm-3">Zapremina motora (cm³):</dt>
        <dd class="col-sm-9">@Model.EngineDisplacement</dd>

        <dt class="col-sm-3">Snaga (kW):</dt>
        <dd class="col-sm-9">@Model.PowerKW</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <input type="submit" value="Obriši" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
        </div>
    </form>
</div>
