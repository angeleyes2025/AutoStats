@model AutoStats.Models.Vehicle

@{
    ViewData["Title"] = "Uredi vozilo";
}

<h1>Uredi vozilo</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="Make" class="control-label fw-bold">Proizvođač</label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model" class="control-label fw-bold">Model vozila</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label fw-bold">Oznaka registracije</label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label fw-bold">Godina proizvodnje</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChassisNumber" class="control-label fw-bold">Broj šasije</label>
                <input asp-for="ChassisNumber" class="form-control text-uppercase" style="text-transform:uppercase;" oninput="sanitizeChassisNumber(this)" />
                <span asp-validation-for="ChassisNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EngineDisplacement" class="control-label fw-bold">Zapremina motora (cm³)</label>
                <input asp-for="EngineDisplacement" class="form-control" />
                <span asp-validation-for="EngineDisplacement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PowerKW" class="control-label fw-bold">Snaga (kW)</label>
                <input asp-for="PowerKW" class="form-control" />
                <span asp-validation-for="PowerKW" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function sanitizeChassisNumber(input) {
            input.value = input.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
