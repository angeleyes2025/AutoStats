@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Authorization
@using Microsoft.AspNetCore.Mvc.RazorPages

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoStats</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar .center-menu {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 position-relative">
            <div class="container position-relative">

                <!-- Lijevi statični tekst (AutoStats) -->
                <span class="navbar-brand fw-bold fs-4">AutoStats</span>

                <!-- Centrirani meni -->
                <div class="center-menu d-none d-sm-block">
                    <ul class="navbar-nav flex-row gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Početna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Index">Moja vozila</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Info">Servisne informacije</a>

                        </li>
                    </ul>
                </div>

                <!-- Desno: login/logout -->
                <div class="ms-auto">
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Odjavi se</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Prijavi se</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-muted text-center py-3">
        <div class="container">
            &copy; 2025 - AutoStats
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
